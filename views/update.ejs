<!DOCTYPE html>
<html lang="en">
  <%- include('templates/header'); -%>

  <body>
    <%- include('templates/nav'); -%>
    <div class="container contApp my-5">
      <!-- Se renderizan los items que se encuentran en el archivo.txt -->

      <div>
        <!-- Se agrega un buscador como componente -->
        <%- include('components/searchUpdateComponent') -%> <% if(items){ %>
        <!-- Se agrega lista de productos como componente -->
        <%- include('components/productListUpdateComponent') -%>

        <!-- Se agrega un formulario como componente -->
        <!-- Muestra campos de actualizacion solo si se realizo la busqueda de un item -->
        <%- include('components/updateComponent') -%> <% } else {%>
        <div>
          <h1></h1>
          <div class="alert alert-warning" role="alert">
            <%= MSG_NOT_FOUNT %>
          </div>
        </div>
        <% }%>
      </div>
    </div>

    <!-- Chat -->
    <div class="container"><%- include('components/chatComponent') %></div>

    <!-- Footer -->
    <div class="bg-dark"><%- include('./templates/footer') -%></div>

    <!-- Configuraciones -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="./index.js"></script>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
